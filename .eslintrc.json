{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "func-names": "off",
    "no-undef": "off",
    "global-require": "off",
    "no-return-await": "off",
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }]
  }
}
